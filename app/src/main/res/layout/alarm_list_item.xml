<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@android:color/holo_orange_dark"
    android:elevation="10dp"
    android:orientation="vertical"
    android:padding="5dp"
    android:translationZ="10dp"
    tools:context="com.example.mike.birdalarm.MainActivity">

    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alarm_time_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="10dp"
            android:text="8:00"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/am_pm_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AM" />

        <Switch
            android:id="@+id/alarm_active_switch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_vertical"
            android:checked="true"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

    <TextView
        android:id="@+id/tomorrowTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:onClick=""
        android:text="Tomorrow"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/options_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/day_button_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/day_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Monday"
                    android:layout_width="@dimen/day_button_diameter"
                    android:layout_height="@dimen/day_button_diameter"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/off_day_selection_button_shape"
                    android:tag="off"
                    android:text="M"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/Tuesday"
                    android:layout_width="@dimen/day_button_diameter"
                    android:layout_height="@dimen/day_button_diameter"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/off_day_selection_button_shape"
                    android:tag="off"
                    android:text="T"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/Wednesday"
                    android:layout_width="@dimen/day_button_diameter"
                    android:layout_height="@dimen/day_button_diameter"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/off_day_selection_button_shape"
                    android:tag="off"
                    android:text="W"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/Thursday"
                    android:layout_width="@dimen/day_button_diameter"
                    android:layout_height="@dimen/day_button_diameter"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/off_day_selection_button_shape"
                    android:tag="off"
                    android:text="T"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/Friday"
                    android:layout_width="@dimen/day_button_diameter"
                    android:layout_height="@dimen/day_button_diameter"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/off_day_selection_button_shape"
                    android:tag="off"
                    android:text="F"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/Saturday"
                    android:layout_width="@dimen/day_button_diameter"
                    android:layout_height="@dimen/day_button_diameter"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/off_day_selection_button_shape"
                    android:tag="off"
                    android:text="S"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/Sunday"
                    android:layout_width="@dimen/day_button_diameter"
                    android:layout_height="@dimen/day_button_diameter"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/off_day_selection_button_shape"
                    android:tag="off"
                    android:text="S"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/repeat_days_checkbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_gravity="end"
                android:text="Repeat" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/alarm_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/change_alarm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:drawableStart="@android:drawable/ic_popup_reminder"
                android:stateListAnimator="@null" />

            <TextView
                android:id="@+id/alarm_type_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="18sp"
                android:layout_alignTop="@+id/vibrateCheckBox"
                android:layout_alignParentStart="true"
                android:layout_marginStart="60dp" />

            <CheckBox
                android:id="@+id/vibrateCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vibrate"
                android:gravity="center_vertical"
                android:layout_alignBaseline="@+id/change_alarm_button"
                android:layout_alignBottom="@+id/change_alarm_button"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp" />

        </RelativeLayout>

        <EditText
            android:id="@+id/label_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:ems="10"
            android:hint="Label"
            android:imeOptions="actionDone"
            android:inputType="textPersonName"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/delete_alarm_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:drawableLeft="@android:drawable/ic_menu_delete"
            android:stateListAnimator="@null" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="5"/>

        <Button
            android:id="@+id/collapse_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:drawableLeft="@android:drawable/arrow_down_float"
            android:stateListAnimator="@null" />

    </LinearLayout>

</LinearLayout>
