<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mike.birdalarm.MainActivity"
    android:layout_margin="10dp"
    android:elevation="0dp"
    android:translationZ="10dp"
    android:padding="5dp">

    <TextView
        android:id="@+id/alarm_list_item"
        style="@style/alarm_title_style"
        android:text="words"
        android:padding="5dp"
        android:textAlignment="center"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/alarm_list_item_content"
        style="@style/alarm_content_style"
        android:text="@string/txt_content"
        android:padding="10dp"/>

</LinearLayout>